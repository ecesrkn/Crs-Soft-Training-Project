@page
@model CalendarAppRazor.Pages.UploadPhotoWithCodeModel
@{
}

<partial name="_SuccessNotification" />

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Upload picture to code</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Model.Code"></label>
            <input asp-for="Model.Code" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Model.YearMonth"></label>
            <input asp-for="Model.YearMonth" type="month" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Model.Picture"></label>
            <input asp-for="Model.Picture" type="file" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back to list</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
