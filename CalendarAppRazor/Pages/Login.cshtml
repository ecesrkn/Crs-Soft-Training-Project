@page
@model CalendarAppRazor.Pages.LoginModel
@{
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Login</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Model.Email"></label>
            <input asp-for="Model.Email" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Model.Password"></label>
            <input asp-for="Model.Password" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Model.RememberMe"></label>
            <input asp-for="Model.RememberMe" value="true" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Login</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Cancel</a>
    </div>
</form>