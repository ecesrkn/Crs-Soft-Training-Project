@page
@model CalendarAppRazor.Pages.ManageInviteCodes.IndexModel
@{
}

<partial name="_SuccessNotification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My invite codes</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/InviteCodeGeneration" class="btn btn-primary">Create an invite code</a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Invite Code
                </th>
                <th>
                    Number of pictures
                </th>
                <th>
                    Go to Calendar
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.InviteCodes)
            {
                <tr>
                    <td width="30%">@obj.Code</td>
                    <td width="30%">@obj.numberOfPictures / 12</td>
                    
                        @if (obj.isCalendarReady)
                        {
                        <td width="20%">
                            <div class="btn btn-group">
                                <a asp-page="CalendarPage" asp-route-id="@obj.Code" class="btn btn-primary mx-2">Go to calendar</a>
                            </div>
                        </td>
                        }else{
                        <td width="20%">
                            not ready
                        </td>
                        }
                    
                    <td>
                        <div class="btn btn-group">
                            <a asp-page="Delete" asp-route-id="@obj.Code" class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>


                </tr>
            }

        </tbody>
    </table>

</div>