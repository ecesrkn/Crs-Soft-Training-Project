@page
@model CalendarAppRazor.Pages.InviteCodeGenerationModel
@{
}

<partial name="_SuccessNotification" />

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Generate an invite code</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Model.CodeDisplay">Your code</label>
            <label asp-for="Model.CodeDisplay" class="form-control">@Model.Model.CodeDisplay</label>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Generate</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Cancel</a>
    </div>
</form>